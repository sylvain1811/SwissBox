<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.hearc.swissbox.recorder.RecorderActivity">

    <ImageView
        android:id="@+id/image_mic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/text_record_duration"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_mic"/>


    <TextView
        android:id="@+id/text_record_duration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="0:00"
        android:textSize="36dp"/>

    <Button
        android:id="@+id/button_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_record_duration"
        android:layout_centerHorizontal="true"
        android:text="@string/start" />

    <!--<Button-->
        <!--android:id="@+id/button_pause"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/text_duration"-->
        <!--android:text="@string/pause" />-->

</RelativeLayout>
